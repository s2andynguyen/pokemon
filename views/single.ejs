<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pokemon</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css" >
  <link rel="stylesheet" href="/stylesheets/types.css" >
  <link rel="stylesheet" href="/stylesheets/mycss.css" >
</head>
<body style="margin-bottom: 500px;">
  <div class="banner mt-4">
    <center><img src="/images/banner.gif" width="179px" alt="banner" class="banner-single" draggable="false" /></center>
  </div>
  <div class="container-lg pt-5">

      <!-- pokemon-single -->
        <a class="btn btn-success mb-4" onclick="history.back()">Quay về trang chủ</a>
        <div class="row"> 
          <div class="col-6">
            
            <div class="pokemon-single__img ">
              <% var id = newArrPokemon[0].id %>
              <% if( id < 10) { %>
                <img src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/00<%= id  %>.png" width="100%" alt="">
                <% } else if(id >=10 && id<99){ %>
                  <img src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/0<%= id %>.png" width="100%" alt="">
                <% } else { %>
                  <img src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/<%= id %>.png" width="100%" alt="">
              <% } %>
            </div>
          </div>
          <div class="col-6">

            <div class="ps-5">
              <p class="pokemon-single__name">
                <%= newArrPokemon[0].name.english %>
              </p>
              <p class="pokemon-single__text mb-5">
                The U.S. News & World Report Best Cruises rankings are designed to help you find 
                a cruise that best suits your needs. Using the following methods, U.S. News has identified 
                the best cruise ships and cruise lines in a variety of categories. We currently rank cruise ships 
                within 17 of the most popular ocean cruise lines. 
              </p>

              <div class="info-base">
                    <div class="from-wrapper ps-4 py-3">
                      <div class="row">
                        <% var newArrBase = newArrPokemon[0].base; %>
                        <% for (const item in newArrBase) {%>
                        <div class="form-power col-6">
                          <p class="title fs-5 mb-0"><%= item %></p>
                          <p class="power fs-5"><%= newArrPokemon[0].base[item] %></p>
                        </div>
                        <% } %>
                      </div>
                    </div>
              </div>

              <!-- type -->
              <p class="pokemon-single__type">Type</p>
              <div>
                <% for(let j = 0; j < newArrPokemon[0].type.length; j++ ){  %>
                    <% switch (newArrPokemon[0].type[j]) {case 'Fire':%>
                    <button class="btn w-25 btn-danger">Fire</button>
                    <% break; case 'Grass':  %>
                    <button class="btn w-25 btn-success">Grass</button>
                    <% break; case 'Bug':  %>
                    <button class="btn w-25 btn-success">Bug</button>
                    <% break; case 'Poison':  %>
                    <button class="btn w-25 poison">Poison</button>
                    <% break; case 'Water':  %>
                    <button class="btn w-25 water">Water</button>
                    <% break; case 'Flying':  %>
                    <button class="btn w-25 flying">Flying</button>
                    <% break; case 'Electric':  %>
                    <button class="btn w-25 electric">Electric</button>
                    <% break; case 'Normal':  %>
                    <button class="btn w-25 normal">Normal</button>
                    <% break; case 'Ground':  %>
                    <button class="btn w-25 ground">Ground</button>
                    <% break; case 'Fairy':  %>
                    <button class="btn w-25 fairy">Fairy</button>
                    <% break; case 'Psychic':  %>
                    <button class="btn w-25 psychic">Psychic</button>
                    <% break; case 'Fighting':  %>
                    <button class="btn w-25 fighting">Fighting</button>
                    <% break; }%>
                <% } %>
              </div>
            </div>
        </div>




  </div>

  <script src="/javascripts/index.js"></script>
  <script>
      var bannerSingle = document.querySelector('.banner-single');
      bannerSingle.onclick = function(){
          history.back();
      }
  </script>
</body>
</html>